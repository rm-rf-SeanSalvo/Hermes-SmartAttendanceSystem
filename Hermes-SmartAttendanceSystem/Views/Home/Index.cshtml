@model Hermes_SmartAttendanceSystem.Models.LoginViewModel
@{
    ViewData["Title"] = "Log In";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Log In - PolyFlow</title>
    <link rel="stylesheet" href="~/css/css.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        .input-validation-error {
            border: 1px solid red !important;
            background-color: #ffe5e5;
        }

        .text-danger {
            color: red;
            font-size: 0.875rem;
            margin-top: 4px;
            display: block;
        }

        .validation-summary-errors {
            background-color: #ffe5e5;
            color: red;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid red;
            border-radius: 5px;
        }

        input[type="text"].input-validation-error,
        input[type="password"].input-validation-error {
            background-color: #ffe5e5;
            border-color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="logo">
                <img src="~/images/polyflow-logo.png" alt="PolyFlow Logo" />
            </div>

            <h2>Log in to continue</h2>
            <p class="subtext">Provide all required information to access your account</p>

            <!-- General error message for invalid login -->
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
            {
                <div class="validation-summary-errors">
                    @ViewData.ModelState[string.Empty].Errors[0].ErrorMessage
                </div>
            }

            <form asp-action="Index" method="post" novalidate>
                <div>
                    <input asp-for="Username" placeholder="Username" type="text" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div>
                    <input asp-for="Password" placeholder="Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="forgot-password">
                    <a href="#">Forgot password?</a>
                </div>

                <button type="submit">Log in</button>
            </form>

            <div class="footer-link">
                New user? <a asp-controller="Home" asp-action="SignUp">Click here</a>

            </div>

        </div>
    </div>

    <!-- Scripts required for validation -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
