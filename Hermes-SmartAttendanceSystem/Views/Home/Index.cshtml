@model Hermes_SmartAttendanceSystem.Models.LoginViewModel
@{
    ViewData["Title"] = "Log In";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Log In - PolyFlow</title>
    <link rel="stylesheet" href="~/css/css.css" />
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="logo">
                <img src="~/images/polyflow-logo.png" alt="PolyFlow Logo" />
            </div>

            <h2>Log in to continue</h2>
            <p class="subtext">Provide all required information to access your account</p>

            <form asp-action="Login" method="post">
                <input asp-for="Username" placeholder="Username" type="text" />
                <input asp-for="Password" placeholder="Password" type="password" />

                <div class="forgot-password">
                    <a href="#">Forgot password?</a>
                </div>

                <button type="submit">Log in</button>
            </form>

            <div class="footer-link">
                Having trouble logging in? <a href="#">Click here</a>
            </div>
        </div>
    </div>
</body>
</html>
